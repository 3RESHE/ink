{
  "name": "ink-language",
  "version": "0.1.26",
  "description": "Adds syntax highlighting, formatting, auto-completion, jump-to-definition and linting for .ink files.",
  "license": "Apache-2.0",
	"icon": "ink.png",
  "author": "Chris <chris@incept.asia>",
  "publisher": "stackpress",
  "homepage": "https://github.com/stackpress/ink",
  "bugs": "https://github.com/stackpress/ink/issues",
  "repository": "stackpress/ink",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "activationEvents": [],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Basic configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "ink",
        "aliases": [ "Ink", "ink" ],
        "icon": {
          "light": "./icon.svg",
          "dark": "./icon.svg"
        },
        "extensions": [ ".ink" ],
        "configuration": "./grammar/schema.language.json"
      }
    ],
    "grammars": [
      {
        "language": "ink",
        "scopeName": "source.ink",
        "path": "./grammar/schema.grammar.json",
        "embeddedLanguages": {
          "text.html.basic": "html",
          "text.html.markdown": "markdown",
          "source.css": "css",
          "source.js": "javascript",
          "source.ts": "typescript"
        },
        "unbalancedBracketScopes": [
          "keyword.operator.relational",
          "storage.type.function.arrow",
          "keyword.operator.bitwise.shift",
          "meta.brace.angle",
          "punctuation.definition.tag"
        ]
      }
    ]
  },
  "main": "./client/out/index.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "build": "npm run build:client && npm run build:server && npm run build:tests",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:tests": "cd tests && npm run build",
    "test": "npm run build && sh tests/boot.sh"
  },
  "engines": {
    "vscode": "^1.90.0"
	},
  "dependencies": {
    "vscode-languageclient": "9.0.1",
    "vscode-languageserver": "8.1.0",
    "vscode-languageserver-textdocument": "1.0.8",
    "vscode-uri": "3.0.8"
  },
  "devDependencies": {
    "@types/mocha": "10.0.1",
    "@types/node": "22.7.4",
    "@types/vscode": "1.90.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.61.0",
    "@vscode/test-electron": "2.4.0",
    "cross-env": "7.0.3",
    "prettier": "3.3.1",
    "eslint": "8.57.0",
    "mocha": "10.2.0",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.6.2"
  }
}